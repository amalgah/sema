{
	"name": "svelte-app",
	"version": "1.0.0",
	"scripts": {
		"dev": "run-p routify rollup",
		"dev:err": "run-p routify rollup 2>err.log 1>out.log",
		"dev:nollup": "run-p routify nollup",
		"dev-dynamic": "cross-env BUNDLING=dynamic npm run dev",
		"build": "routify -b && rollup -c && routify export && workbox injectManifest",
		"serve": "spassr --serve-spa --serve-ssr",
		"export": "routify export",
		"build:docker": "npm run build && ./scripts/docker/docker-build.sh",
		"deploy:now": "cd scripts/now && npm run deploy",
		"deploy:netlify": "cd scripts/netlify && npm run deploy",
		"rollup": "rollup -cw",
		"nollup": "nollup -c",
		"routify": "routify"
	},
	"devDependencies": {
		"@auth0/auth0-spa-js": "^1.10.0",
		"@rollup/plugin-commonjs": "^13.0.0",
		"@rollup/plugin-node-resolve": "^8.1.0",
		"@rollup/plugin-replace": "^2.3.3",
		"concurrently": "^5.2.0",
		"cross-env": "^7.0.2",
		"del": "^5.1.0",
		"nollup": "^0.13.2",
		"npm-run-all": "^4.1.5",
		"rollup": "^2.18.1",
		"rollup-plugin-copy": "^3.3.0",
		"rollup-plugin-hot": "^0.0.31",
		"rollup-plugin-livereload": "^1.3.0",
		"rollup-plugin-svelte": "^5.2.3",
		"rollup-plugin-svelte-hot": "^0.9.2",
		"rollup-plugin-terser": "^6.1.0",
		"spassr": "^1.1.2",
		"svelte": "^3.23.2",
		"svelte-codemirror": "git+https://github.com/frantic0/svelte-codemirror.git",
		"svelte-grid": "^3.6.0",
		"svelte-inspect": "^0.1.2",
		"workbox-cli": "^5.1.3"
	},
	"routify": {
		"extensions": "svelte,html,svx,md",
		"dynamicImports": true
	},
	"dependencies": {
		"@rollup/plugin-wasm": "^5.1.2",
		"@roxi/routify": "^2.7.3",
		"do-not-zip": "^1.0.0",
		"highlight.js": "^10.6.0",
		"js-beautify": "^1.13.5",
		"nearley": "^2.20.1",
		"postcss-import": "^12.0.1",
		"rollup-plugin-web-worker-loader": "^1.6.0",
		"sema-engine": "0.0.29",
		"svelte-preprocess": "^4.0.9"
	}
}
